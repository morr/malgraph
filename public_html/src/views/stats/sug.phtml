<?php iterateUsers(function($user, $otherUser) { ?>
<div class="section recs">
	<h2>
		<i data-tooltip="List of titles you might want to check out,|found with some complicated formulas." class="icon-tooltip"></i>
		<?php echo ChibiRegistry::getHelper('mg')->headerLink($user, 'recommendations') ?>
	</h2>
	<div class="section-body">
		<?php if (empty($this->recs[$user->getID()])): ?>
			<p>No recommendations. :(</p>
		<?php else: ?>
			<?php if ($this->recsStatic[$user->getID()]): ?>
				<p>Your <?php echo ChibiRegistry::getHelper('mg')->textAM() ?> list is too short for us to guess your tastes, but don&rsquo;t&nbsp;worry! Here&nbsp;are some widely recommended titles that you haven&rsquo;t <?php echo $this->am == AMModel::TYPE_ANIME ? 'watched' : 'read' ?> yet:</p>
			<?php else: ?>
				<p><?php echo ucfirst(ChibiRegistry::getHelper('mg')->textAM()) ?> recommendations tailored to your taste. The system says you will like them, but we take no responsibility for injuries due to bad suggestions.</p>
			<?php endif ?>
			<table>
			<tbody>
			<?php foreach ($this->recs[$user->getID()] as $entry): ?>
				<tr class="header">
					<td class="title">
						<a class="pop-out" href="http://myanimelist.net/<?php echo ChibiRegistry::getHelper('mg')->textAM() ?>/<?php echo $entry->getID() ?>">
							<i class="icon-pop-out"></i>
							&nbsp;
						</a>
						<a class="more" href="#">
							<?php echo $entry->getTitle() ?>
						</a>
					</td>
					<td class="type">
						<?php if ($entry->getType() == AMModel::TYPE_ANIME): ?>
							<?php echo ucfirst(ChibiRegistry::getHelper('mg')->textSubType($entry->getSubType())) ?>
							<?php if ($entry->getStatus() == AMEntry::STATUS_PUBLISHING): ?>
								,&nbsp;<em>airing</em>
							<?php elseif ($entry->getSubType() != AnimeEntry::SUBTYPE_MOVIE): ?>
								,&nbsp;<?php echo ChibiRegistry::getHelper('mg')->textEpisodes($entry->getEpisodeCount()) ?>
							<?php endif ?>
						<?php else: ?>
							<?php if ($entry->getStatus() == AMEntry::STATUS_PUBLISHING): ?>
								<em>publishing</em>
							<?php else: ?>
								<?php echo ChibiRegistry::getHelper('mg')->textVolumes($entry->getVolumeCount()) ?>,&nbsp;
								<?php echo ChibiRegistry::getHelper('mg')->textChapters($entry->getChapterCount()) ?>
							<?php endif ?>
						<?php endif ?>
					</td>
				</tr>
				<tr class="details">
					<td colspan="2">
						<div class="wrapper-more singular">
							<a class="close">&times;</a>
							<a class="img" href="http://myanimelist.net/<?php echo $this->mgHelper->textAM() ?>/<?php echo $entry->getID() ?>">
								<?php if (!$entry->getPictureURL()): ?>
									<img class="unavailable" alt="No profile picture" src="<?php echo UrlHelper::url('media/img/pixel.gif') ?>">
								<?php else: ?>
									<img src="<?php echo $entry->getPictureURL() ?>" alt="Picture from MAL">
								<?php endif ?>
							</a>

							<table>
								<tr class="year">
									<td class="key">Season</td>
									<td class="value"><?php echo AMService::getAiredSeason($entry) ?: '?' ?></td>
								</tr>

								<tr class="creators">
									<td class="key"><?php echo $entry->getType() == AMModel::TYPE_ANIME ? 'Studio' : 'Author' ?></td>
									<td class="value no-wrap"><?php
										$tmp = [];
										foreach ($entry->getCreators() as $creator) {
											if (!AMService::creatorForbidden($creator)) {
												if ($this->am == AMModel::TYPE_MANGA) {
													$item = '<a href="http://myanimelist.net/people/' . $creator->getID() . '/">';
												} else {
													$item = '<a href="http://myanimelist.net/anime.php?p=' . $creator->getID() . '">';
												}
												$item .= $creator->getName();
												$item .= '</a>';
												$tmp []= $item;
											}
										}
										if (empty($tmp)) {
											echo 'None found';
										} else {
											echo join(', ', $tmp);
										} ?>
									</td>
								</tr>

								<tr class="tags">
									<td class="key">Tags</td>
									<td class="value"><?php
										$tmp = [];
										if ($entry->getTags()) {
											foreach ($entry->getTags() as $tag) {
												$item = '<a href="http://myanimelist.net/' . ChibiRegistry::getHelper('mg')->textAM() . '.php?tag=' . urlencode($tag->getName()) . '">';
												$item .= $tag->getName();
												$item .= '</a>';
												$tmp []= $item;
											}
											echo join(', ', $tmp);
										} elseif ($entry->getGenres()) {
											foreach ($entry->getGenres() as $genre) {
												$item = '<a href="http://myanimelist.net/' . ChibiRegistry::getHelper('mg')->textAM() . '.php?genre%5b%5d=' . $genre->getID() . '">';
												$item .= $genre->getName();
												$item .= '</a>';
												$tmp []= $item;
											}
											echo join(', ', $tmp);
										} else {
											echo 'None found';
										} ?>
									</td>
								</tr>

								<tr class="franchise">
									<td class="key">Franchise</td>
									<td class="value"><?php
										$tmp = [];
										$franchise = $entry->getFranchise();
										$eps = 0;
										$subTypes = [];
										foreach ($franchise->entries as $subEntry) {
											$subTypes[$subEntry->getSubType()] []= $subEntry;
										}
										foreach ($subTypes as $subType => $subEntries) {
											$item = count($subEntries) . ' ';
											$item .= ChibiRegistry::getHelper('mg')->textSubType($subType, count($subEntries));
											$tmp []= $item;
											foreach ($subEntries as $subEntry) {
												if ($entry->getType() == AMModel::TYPE_ANIME) {
													$eps += $subEntry->getEpisodeCount();
												} else {
													$eps += $subEntry->getChapterCount();
												}
											}
										}
										echo join(', ', $tmp);
										echo ' (';
										if ($this->am == AMModel::TYPE_ANIME) {
											echo ChibiRegistry::getHelper('mg')->textEpisodes($eps);
										} else {
											echo ChibiRegistry::getHelper('mg')->textChapters($eps);
										}
										echo ')';?>
									</td>
								</tr>

								<tr class="add-mal">
									<td class="key">Add to MAL</td>
									<td class="value">
										<?php if ($entry->getType() == AMModel::TYPE_ANIME): ?>
											<a href="http://myanimelist.net/panel.php?go=add&amp;selected_series_id=<?php echo $entry->getID() ?>">
										<?php else: ?>
											<a href="http://myanimelist.net/panel.php?go=addmanga&amp;selected_manga_id=<?php echo $entry->getID() ?>">
										<?php endif ?>
											Click (must be logged in)</a>
									</td>
								</tr>
							</table>

							<div class="clear"></div>
						</div>
					</td>
				</tr>
			<?php endforeach ?>
			</tbody>
			</table>
		<?php endif ?>
	</div>
</div>
<?php }); ?>



