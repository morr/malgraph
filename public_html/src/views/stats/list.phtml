							<?php $e2 = null ?>
							<?php if ($showUnique): ?>
								<?php $e2 = $otherUser->getList($this->am)->getEntryByID($e->getID()) ?>
								<?php if (empty($e2)): ?>
									<tr class="unique">
								<?php else: ?>
									<tr class="not-unique">
								<?php endif ?>
							<?php else: ?>
								<tr>
							<?php endif ?>
								<td class="status status-<?php echo $e->getStatus() ?>"></td>

