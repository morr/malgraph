<script type="text/javascript">
	$('.btn.get-ids').click(function(e) {
		var text = $('textarea[name=\'ids\']').val();
		var regex = /(\d+)/g;
		var ids = [];
		while ((match = regex.exec(text)) != null) {
			var id = match[1];
			if (ids.lastIndexOf(id) == -1) {
				ids.push(id);
			}
		}
		$('input[name=\'am-id\']').val(ids.join(','));
		e.preventDefault();
	});
</script>
